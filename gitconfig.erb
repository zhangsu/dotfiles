[user]
    name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
    co = checkout
[color]
    ui = auto
[core]
    editor = vim
[diff]
    tool = vimdiff
    renameLimit = 2048
[pager]
    log = diff-so-fancy | less
    branch = diff-so-fancy | less --tabs=4 -RFX
    status = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4
    diff = diff-so-fancy | less  --tabs=4
[push]
    default = upstream
[github]
    user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
